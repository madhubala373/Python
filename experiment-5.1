import matplotlib.pyplot as plt

def scatter_plot(x, y, xlabel='X', ylabel='Y', title='Scatter plot'):
    plt.figure(figsize=(8,6))
    plt.scatter(x, y, alpha=0.7, s=50)
    plt.xlabel(xlabel)
    plt.ylabel(ylabel)
    plt.title(title)
    plt.grid(True)
    plt.show()

